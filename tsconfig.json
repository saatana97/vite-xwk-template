{
    "include": ["env.d.ts", "src/**/*", "docs/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["ESNext", "DOM"],
        "types": [],
        "outDir": "types",
        "rootDirs": ["src", "docs"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0"
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
