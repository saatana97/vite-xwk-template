{
    "name": "vite-xwk-template",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@7.28.0",
    "author": {
        "name": "向文可",
        "email": "1041367524@qq.com",
        "url": "https://github.com/saatana97"
    },
    "scripts": {
        "dev": "pnpm -F @apps/web dev",
        "pkgs": "pnpm -F @pkgs/* build",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix --ignore-path .gitignore",
        "prettier": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,json,md}",
        "prepare": "husky install"
    },
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^17.4.1",
        "@commitlint/config-conventional": "^17.4.0",
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.22.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "prettier": "^2.7.1",
        "typescript": "^4.9.5"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "npm run lint",
            "npm run prettier"
        ],
        "*.{html,css,less,md}": [
            "npm run prettier"
        ]
    }
}
