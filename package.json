        "prettier": "prettier --write ./**/*.{ts,tsx,js,jsx,css,json,md}",
        "prepare": "husky install"
    },
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^17.4.1",
        "@commitlint/config-conventional": "^17.4.0",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
