        "lint-staged": "^13.1.0",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vite": "^4.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "npm run lint",
            "npm run prettier"
        ],
        "*.{html,css,less,md}": [
            "npm run prettier"
        ]
    }
