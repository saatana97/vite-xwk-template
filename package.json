{
    "name": "xwk-lib",
    "version": "1.0.0",
    "keywords": [
        "xwk",
        "wink",
        "vite",
        "libary"
    ],
    "author": {
        "name": "向文可",
        "email": "1041367524@qq.com",
        "url": "https://github.com/saatana97"
    },
    "repository": {
        "url": "https://e.coding.net/soul-coder/github/vite-xwk-template.git"
    },
    "private": false,
    "files": [
        "dist",
        "types"
    ],
    "type": "module",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "types": "types/index.d.ts",
    "browser": "dist/index.js",
    "exports": {
        ".": {
            "types": "./types/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "dev": "vite docs",
        "build": "tsc && vite build",
        "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag && pnpm run build && pnpm publish --access public",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "prettier": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,json,md,html}",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.1",
        "@commitlint/config-conventional": "^17.4.0",
        "@saatana97/eslint-config": "^1.0.0",
        "@types/lodash": "^4.14.191",
        "@vitejs/plugin-vue": "^4.2.1",
        "@vue/tsconfig": "^0.3.2",
        "bumpp": "^9.1.0",
        "conventional-changelog-cli": "^2.2.2",
        "eslint": "^8.35.0",
        "husky": "^8.0.3",
        "less": "^4.1.3",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.4",
        "rollup-plugin-visualizer": "^5.9.0",
        "typescript": "~5.0.4",
        "vite": "^4.0.0",
        "vue": "^3.2.47",
        "vue-tsc": "^1.6.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "npm run lint"
        ],
        "*.{vue,ts,tsx,js,jsx,css,less,json,md,html}": [
            "npm run prettier"
        ]
    }
}
